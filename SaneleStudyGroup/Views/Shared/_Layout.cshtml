<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - My ASP.NET Application</title>
    @Styles.Render("~/Content/Site.css")
    @Styles.Render("~/Content/StyleSheet1.css")
    @Scripts.Render("~/bundles/modernizr")

</head>
<body>
    <div class="navbar">
        <a href="@Url.Action("Home", "Students")">Simple Starting Sample</a>
        <div class="dropdown">
            <button class="dropbtn">
                List of People
                <i class="fa fa-caret-down"></i>
            </button>
            <div class="dropdown-content">
                <a href="@Url.Action("Home", "Students")">List of people</a>
                <a href="~/HTML/Sanele.html">Person 1</a>
                <a href="~/HTML/Thabo.html">Person 2</a>
                <a href="~/HTML/Asanda.html">Person 3</a>
                <a href="~/HTML/Anouk.html">Person 4</a>
                <a href="~/HTML/Noah.html">Person 5</a>
            </div>
        </div>
    </div>
    <div class="container body-content">

        @RenderBody()

        <hr />

        <footer>
            <p>Sanele M</p>
        </footer>

    </div>

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)
</body>
</html>
