@model IEnumerable<SaneleStudyGroup.Students>

@{
    ViewBag.Title = "Home";
}
<script src="@Url.Content(" ~ /Scripts/Myscript.js")" type="text/javascript"></script>
<h2>List Of Students</h2>


<table class="removeLink"style= "text-align: center; width: 80%; height: 100%," class="table table-striped table-bordered table-hover table-responsive">
    <thead>
        <tr style="background-color:seagreen;color:white">
            <th>
                @Html.DisplayNameFor(model => model.StudentNumber)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Surname)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.EmailAddress)
            </th>
            <th>
                Link To Personal Page
            </th>
            <th>
               Delete My Buddy
            </th>
        </tr>
    </thead>
<tbody >
@foreach (var item in Model) {
        
    <tr class="removeLink" style="background-color: white; color:black ;text-align: center; width:60px;height: 60px">
        <td class="text">
            @Html.DisplayFor(modelItem => item.StudentNumber)
        </td>
        <td class="text">
            @Html.DisplayFor(modelItem => item.Name)
        </td>
        <td class="text" >
            @Html.DisplayFor(modelItem => item.Surname)
        </td>
        <td class="text">
            @Html.DisplayFor(modelItem => item.EmailAddress)
        </td>
        <td>
            <button style="width: 60px; height: 50px;border-radius: 8px; border-color: #4CAF50; background-color: #4CAF50; color: white" class="btn btn-success" onclick="window.location.href = '@Url.Content(item.myLink)'">LINK</button>
        </td>
        <td>
            <button class="btnDelete" style="width: 60px; height: 50px;border-radius: 8px; border-color: #4CAF50; background-color: #4CAF50; color: white" >Delete</button>
        </td>   
    </tr>
}
</tbody>
</table>
@section Scripts {
<script> 
    $(".removeLink").on('click', '.btnDelete', function () {
        $(this).closest('tr').remove();
    });
    $('.removeLink').on('click','.text',function () { 
        let firstChar = $(this).text().trim().charAt(0).toLowerCase();

        if (firstChar == 's') {
            $(this).closest('tr').css('color', 'red');
        }
        else { 
            $(this).closest('tr').css('color', 'black');
        }
    });
        </script>

}
